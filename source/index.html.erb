--- 
layout: front-page 
pageable: true 
per_page: 10 
---
<% if paginate && num_pages > 1 %>
  <p>Page
    <%= page_number %> of
      <%= num_pages %>
  </p>

  <% if prev_page %>
    <p>
      <%= link_to 'Previous page', prev_page %>
    </p>
    <% end %>
      <% end %>
        <% page_articles.each_with_index do |article, i| %>
        <div id="clean-text">
        <% link_to article.path, :relative => true, :fragment => 'main' do %>
        <div class="summary">
          
          <h2>
            <%= article.title %>
          </h2>
          <h3>
            <%= article.data.subtitle %>
          </h3>
          <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
          <article>
            <%= article.summary(500) %>
          </article>
          <hr />
          <span class = "post-meta">
            Published <em><%= article.date.strftime('%e %B %Y') %></em>
          </span>
        </div>
        <% end %>
      </div>
          <% end %>

            <% if paginate %>
              <% if next_page %>
                <p>
                  <%= link_to 'Next page', next_page %>
                </p>
                <% end %>
                  <% end %>